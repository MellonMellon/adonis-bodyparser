{
  "name": "@adonisjs/bodyparser",
  "version": "2.0.4",
  "description": "Body parser middleware for Adonis 4.0 and above",
  "main": "index.js",
  "files": [
    "config",
    "providers",
    "src",
    "instructions.js",
    "instructions.md"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "FORCE_COLOR=true node bin/index.js --local",
    "test": "nyc japa",
    "test:win": "node ./node_modules/japa-cli/index.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "commit": "git-cz",
    "lint": "standard"
  },
  "standard": {
    "global": [
      "use",
      "it",
      "describe",
      "context",
      "before",
      "after"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-bodyparser.git"
  },
  "keywords": [
    "adonis",
    "http-middleware",
    "middleware",
    "adonisjs"
  ],
  "author": "adonisjs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-bodyparser/issues"
  },
  "homepage": "https://github.com/adonisjs/adonis-bodyparser#readme",
  "dependencies": {
    "@adonisjs/generic-exceptions": "^2.0.1",
    "bytes": "^3.0.0",
    "co-body": "^6.0.0",
    "debug": "^3.1.0",
    "end-of-stream": "^1.4.1",
    "fs-extra": "^6.0.1",
    "get-stream": "^3.0.0",
    "lodash": "^4.17.10",
    "media-typer": "^0.3.0",
    "multiparty": "^4.1.4",
    "xml-js": "^1.6.8"
  },
  "devDependencies": {
    "@adonisjs/fold": "^4.0.9",
    "@adonisjs/mrm-preset": "^1.0.9",
    "@adonisjs/sink": "^1.0.16",
    "commitizen": "^2.10.1",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "japa": "^1.0.6",
    "japa-cli": "^1.0.1",
    "mrm": "^1.2.1",
    "node-req": "^2.1.0",
    "nyc": "^12.0.2",
    "pkg-ok": "^2.2.0",
    "semver": "^5.5.0",
    "standard": "^11.0.1",
    "supertest": "^3.1.0",
    "zombie": "^6.1.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "src"
    ],
    "exclude": [
      "test",
      "japaFile.js"
    ]
  }
}
